<% include ./partials/head %>
<body>
  <div class="row">
  <% include ./partials/menubar %>
  </div>
  <div class="row">
    <div class="col offset-s4">
      <form action="/patients/edit/<%=data_patient.id%>" method="post">
      <div class="row">
        <div class="input-field col s6">
          <label for="name"> Name </label>
          <input type="text" id="name" value = "<%=data_patient.nama%>" name="name">
        </div>
        <div class="input-field col s6">
          <select name="gender">
            <option value="Male" <%=(data_patient.gender == "Male") ? "selected" : ""%>>Male</option>
            <option value="Female"<%=(data_patient.gender == "Female") ? "selected" : ""%>>Female</option>
          </select>
          <label> Gender </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input type="date" class="datepicker" value="<%=data_patient.tanggal_lahir%>" name="tanggal_lahir" id="tanggal_periksa">
          <label for="tanggal_periksa"> Tanggal Lahir </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea1" name="alamat" value = "<%=data_patient.alamat%>" class="materialize-textarea"></textarea>
          <label for="textarea1">Alamat</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
      </button>
    </form>
    </div>
  </div>

  <% include ./partials/scriptMaterialize %>
</body>

<% include ./partials/footer %>
