<% include ./partials/head %>
<body>
  <div class="row">
    <% include ./partials/menubar %>
  </div>
  <div class="row">
    <div class="col offset-s4">
    <form action="/admin/edit/<%=employees.id%>" method="post">
      <div class="padding">
      <div class="row">
        <div class="input-field col s8">
          <input placeholder="Nama Employee" name = "nama" id="nama" type="text" value ="<%=employees.nama%>" class="validate">
          <label for="first_name">Nama</label>
        </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="username" name="username" type="text" value ="<%=employees.username%>" class="validate">
          <label for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input id="password" name="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s7">
        <select name="role">
          <option value="Admin" <%=(employees.role == "Admin") ? "selected" : ""%> >Admin</option>
          <option value="Dokter" <%=(employees.role == "Dokter") ? "selected" : ""%> >Dokter</option>
          <option value="Pasien" <%=(employees.role == "Pasien") ? "selected" : ""%> >Pasien</option>
        </select>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
    </button>
  </form>

    <div>


    </div>
    </div>
    </div>
    </div>
  </div>

  <% include ./partials/scriptMaterialize %>
</body>

<% include ./partials/footer %>
